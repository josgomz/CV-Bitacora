---
export interface Props {
  name: string;
  title: string;
  description: string;
  image?: string;
}

const { name, title, description, image = "/placeholder-avatar.jpg" } = Astro.props;
---

<section class="text-white py-8 sm:py-12 lg:py-16 -mx-4 sm:-mx-6 lg:-mx-8 mb-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-gray-800 rounded-lg shadow-md p-5 mb-5 border-l-4 border-indigo-500">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-4">
        <!-- Contenido principal (3/4) -->
        <div class="lg:col-span-3">
          <h3 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-3">{name}</h3>
          <h4 class="text-lg sm:text-xl lg:text-2xl font-light mb-4 text-indigo-300">{title}</h4>
          <ul class="space-y-2 text-sm">
            {description.split('. ').filter(sentence => sentence.trim().length > 0).map(sentence => (
              <li class="flex items-start mb-2">
                <span class="text-indigo-400 font-bold mr-2 mt-1 text-xs">→</span>
                <span class="text-gray-300">
                  {sentence.trim()}
                </span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Información lateral (1/4) -->
        <div class="lg:col-span-1 space-y-3">
          <!-- Foto y info -->
          <div class="bg-gray-700 p-3 rounded-lg text-center">
            <img 
              src={image} 
              alt={name} 
              class="w-32 h-48 sm:w-36 sm:h-56 rounded-lg object-cover border-2 border-indigo-400 shadow-lg mx-auto mb-2"
            />
            <h5 class="font-semibold text-indigo-300 text-sm">Desarrollador</h5>
            <p class="text-white text-sm">Full Stack</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


