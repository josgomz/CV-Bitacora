<script>
  document.addEventListener('DOMContentLoaded', function() {
    const timelineContainer = document.getElementById('timeline-container');
    const timelineProgress = document.getElementById('timeline-progress');
    const timelineItems = document.querySelectorAll('.timeline-item');
    
    if (!timelineContainer || !timelineProgress || !timelineItems.length) return;

    // Función para animar la línea de progreso
    function updateTimelineProgress() {
      if (!timelineContainer || !timelineProgress) return;
      
      const containerRect = timelineContainer.getBoundingClientRect();
      const windowHeight = window.innerHeight;
      
      // Calcular el progreso basado en la posición del scroll
      const containerTop = containerRect.top;
      const containerHeight = containerRect.height;
      
      // Si el contenedor está completamente fuera de la vista, no hacer nada
      if (containerTop > windowHeight) {
        timelineProgress.style.height = '0%';
        return;
      }
      
      // Calcular el porcentaje de progreso
      const scrollProgress = Math.max(0, Math.min(1, (windowHeight - containerTop) / (windowHeight + containerHeight)));
      const progressPercentage = scrollProgress * 100;
      
      timelineProgress.style.height = `${Math.min(progressPercentage, 100)}%`;
    }

    // Función para animar los elementos de la línea de tiempo
    function animateTimelineItems() {
      timelineItems.forEach((item, index) => {
        const rect = item.getBoundingClientRect();
        const windowHeight = window.innerHeight;
        
        // Si el elemento está en el viewport
        if (rect.top < windowHeight * 0.8) {
          // Añadir delay basado en el índice para efecto de cascada
          setTimeout(() => {
            item.classList.remove('opacity-0', 'translate-y-10');
            item.classList.add('opacity-100', 'translate-y-0');
          }, index * 100); // 100ms de delay entre cada elemento
        }
      });
    }

    // Función principal de scroll
    function handleScroll() {
      updateTimelineProgress();
      animateTimelineItems();
    }

    // Event listeners
    window.addEventListener('scroll', handleScroll);
    window.addEventListener('resize', handleScroll);
    
    // Ejecutar inmediatamente para elementos ya visibles
    handleScroll();
    
    // Añadir efecto de hover mejorado a las imágenes
    const images = document.querySelectorAll('.timeline-item img');
    images.forEach(img => {
      img.addEventListener('mouseenter', function(this: HTMLImageElement) {
        this.style.filter = 'brightness(1.1) saturate(1.2)';
      });
      
      img.addEventListener('mouseleave', function(this: HTMLImageElement) {
        this.style.filter = 'brightness(1) saturate(1)';
      });
    });
  });
</script>

